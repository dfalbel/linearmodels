x <- matrix(runif(10000), ncol = 5)
y <- 2*x[, 1, drop = FALSE] + runif(2000)


a <- cpp_LinearRegression_create()
cpp_LinearRegression_fit(a, x, y)
cpp_LinearRegression_predict(a, x)

mylm(x, y)

library(magrittr)
df <- cbind(x, y) %>% as.data.frame() 

  lm(V6 ~ 0 + ., data = .) %>% coef()


solve(x, as.numeric(y))





all.equal(
  x %*% y,
  fun1(x, y)
)


microbenchmark::microbenchmark(
  mylm(x, y),
  lm(V6 ~ 0 + ., data = df)
  )
